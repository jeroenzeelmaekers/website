---
import NavigationItem from './NavigationItem.astro';

const navigation = [
  { url: '/', label: 'Home' },
  { url: '/projects', label: 'Projects' },
  { url: '/history', label: 'History' },
];
---

<nav class="flex-1 font-serif">
  <ul class="flex flex-row justify-center gap-2 pt-4">
    {navigation.map((item) => <NavigationItem url={item.url} label={item.label} />)}
  </ul>
</nav>
